/**index.wxss**/
.count-container swiper {
    width: 100%;
    height: 300rpx;
    border: 1px solid;
}
.header-line{
    margin-bottom: 20rpx;
    font-size: 50rpx;
    font-weight: 700;
}
swiper-item {
    font-size: 60rpx;
    font-weight: 800;
    height: 100px;
    text-align: center;
}
swiper-item text {
    background-color: linear-gradient(right, #ff3900, #fbef01);
}
/* swiper-item:nth-child(1) {

} */
.form-main {
    width: 100%;
    height: 100%;
    display: flex;
    text-align: center;   
}
.form-main form {
    width: 100%;
}
.pitaya-info {
    padding: 30rpx 0;
    background-color: #fae3d9;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.pitaya-info input {
    border-bottom: 1px solid;
    margin: 10rpx 0;
}
.sesame-counter{
    background-color: #bbded6;
    padding: 30rpx 0;
}
.option-box {
    display: flex; 
    justify-content: center;  
}
.option-box button {
    margin: 20rpx;
}
.input-number input{
    margin: 10rpx 0;
}
.option-container{
    height: 300rpx;
    padding-top: 50%;
    padding: 30rpx 0;
    background-color: #61c0bf;
}